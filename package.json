{
  "name": "@powerfulyang/utils",
  "version": "1.3.12",
  "description": "common utils",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "author": {
    "name": "powerfulyang"
  },
  "repository": "https://github.com/powerfulyang/tools",
  "license": "MIT",
  "keywords": [
    "utils"
  ],
  "files": [
    "dist",
    "src"
  ],
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "patch-version": "npm version patch --no-git-tag-version",
    "build": "rimraf dist && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "watch:build": "rimraf dist && tsc -p tsconfig.json --watch",
    "prettier": "prettier \"src/**/*.{ts,tsx,scss,json,js}\" --write",
    "lint:js": "eslint --ext .ts,.tsx  ./src --fix",
    "test": "jest",
    "tsc": "tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "precommit": "npm run test && npm run tsc && lint-staged"
  },
  "devDependencies": {
    "@powerfulyang/lint": "0.7.14",
    "npm-run-all": "4.1.5"
  },
  "dependencies": {
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.5",
    "ts-toolbelt": "9.6.0"
  }
}
